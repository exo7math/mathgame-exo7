  \pgfmathsetmacro{\vxnP}{ \vxP/sqrt(\vxP*\vxP+\vyP*\vyP) }
  \pgfmathsetmacro{\vynP}{ \vyP/sqrt(\vxP*\vxP+\vyP*\vyP) }
 
    
    \draw[vector,thin, brown]
      (\xP,\yP) -- ++ ($0.2*(-\vyP,\vxP)$)
    ;

    \draw[vector,thin, brown]
      (6+\xP,0) -- ++ ($0.2*(-\vyP,\vxP)$)
    ;
}

